{
    "env": {
        "es6": true,
        "browser": true,
        "jest": true
    },
    "extends": ["plugin:react/recommended", "airbnb-base"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "indent": ["error", 4],
        "arrow-parens": ["error", "always"],
        "no-underscore-dangle": ["error", { "allow": ["_id"] }],
        "no-param-reassign": [2, { "props": false }],
        "no-plusplus": "off"
    }
}
